<%- include('./base/header.ejs') %>

<%- include('./base/nav.ejs') %>

<div class="contain">
    <div class="alert text-center bg-warning my-3" style="color: black;">
            <h4>Student list</h4>
    </div>
 </div> 

 <div class="contain">
    <table class="table text-center">
        <thead>
            <tr>
                <th>Student Photo</th>
                <th>RollNo</th>
                <th>Name</th>
                <th>father Name</th>
                <th>Course</th>
                <th>Branch</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student)=>{ %>
                <tr>
                    <td>
                        <img src="<%= student.studentImage %>" alt="Student Image" width="50px" height="50px">
                    </td>
                    <td><%= student.RollNo %></td>
                    <td><%= student.Name %></td>
                    <td><%= student.FatherName %></td>   
                    <td><%= student.Course %></td>
                    <td> <%= student.Branch %></td>
                    <td> 
                        <a href="/edit/student/page/<%=student._id %>" class="btn button">Edit</a> 
                        <a href="/delete/student/<%=student._id %>" class="btn btn-warning" >Delete</a>

                    </td>
                </tr>

           <% }) %>
        </tbody>

    </table>
 </div>

<%- include('./base/footer.ejs') %>